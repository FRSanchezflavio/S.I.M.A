{
  "name": "sima-backend",
  "version": "0.1.0",
  "private": true,
  "description": "S.I.M.A - Backend API (Express + PostgreSQL)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "migrate:test": "node -e \"process.env.NODE_ENV='test'; require('child_process').spawnSync('npx', ['knex','migrate:latest','--env','test'], { stdio: 'inherit', shell: true });\"",
    "pretest": "node scripts/create-test-db.js && npm run migrate:test",
    "test": "jest --runInBand",
    "backup": "node scripts/backup.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "exceljs": "^4.4.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
}
